/* components/likeItem/likeItem.wxss */
.items {
  display: inline-block;
}

.items .item {
  display: flex;
  flex-direction: column;
  width: 240rpx;
  border-radius: 20rpx;
  border: 1px solid #fff;
  box-shadow: 0px 5px 10px #ccc;
  margin-top: 10rpx;
  margin-left: 20rpx;
  overflow: hidden;
}

.item_img {
  width: 100%;
  height: 240rpx;
}

.item_title {
  margin-top: 26rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.item_price {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #9a9a9a;
  margin-bottom: 50rpx;
}